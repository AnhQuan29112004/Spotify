<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/css/StyleSheet.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row" style="height: 100vh; display: flex; flex-direction: column;">
        <div id="header" class="col-md-12">
            @Html.Partial("_Header")
        </div>
        <div class="d-flex row g-2" style="flex: 1; overflow: hidden;">
            <div id="playlistView" class="col-md-3">
                @Html.Partial("_PlaylistView")
            </div>

            <div id="mainContent" class="col-md-9">
                @RenderBody()
            </div>
        </div>
        <div id="musicPlayerFooter" class="col-md-12">
            @Html.Partial("_MusicPlayerFooter")
        </div>
    </div>
    <script src="~/Scripts/bootstrap.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
