@model MusicApp.Models.MusicViewModel

@{
    ViewBag.Title = "Music";
}
<div class="d-flex justify-content-between">
    <h2>Music List</h2>
    <!-- Biểu tượng thêm nhạc -->
    <i class="bi bi-plus-square-fill btn" data-bs-toggle="modal" data-bs-target="#addSongModal"></i>
    <!-- Modal Thêm Nhạc -->
    <div class="modal fade" id="addSongModal" tabindex="-1" aria-labelledby="addSongModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSongModalLabel">Add New Song</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("SaveSong", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="mb-3">
                            <label for="song_name" class="form-label">Song Name</label>
                            @Html.TextBox("song_name", null, new { @class = "form-control", id = "song_name" })
                        </div>

                        <div class="mb-3">
                            <label for="singerSelect" class="form-label">Singer</label>
                            <select id="singerSelect" name="singerSelect" class="form-control">
                                <option value="">-- Choose a Singer --</option>
                                @foreach (var singer in Model.Singers)
                                {
                                    <option value="@singer.SingerId">@singer.SingerName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="newSingerName" class="form-label">Or Enter New Singer</label>
                            @Html.TextBox("newSingerName", null, new { @class = "form-control", id = "newSingerName", placeholder = "Enter new singer name" })
                        </div>

                        <div class="mb-3">
                            <label for="language" class="form-label">Language</label>
                            @Html.TextBox("language", null, new { @class = "form-control", id = "language" })
                        </div>

                        <div class="mb-3">
                            <label for="genre" class="form-label">Genre</label>
                            @Html.TextBox("genre", null, new { @class = "form-control", id = "genre" })
                        </div>

                        <div class="mb-3">
                            <label for="musicFile" class="form-label">Music File</label>
                            <input type="file" name="musicFile" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="thumbnailFile" class="form-label">Thumbnail File</label>
                            <input type="file" name="thumbnailFile" class="form-control" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save Song</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>Song ID</th>
            <th>Song Title</th>
            <th>Singer Name</th>
            <th>Created Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.SongId</td>
                <td>@song.SongTitle</td>
                <td>@song.SingerName</td>
                <td>@(song.CreatedTime.HasValue ? song.CreatedTime.Value.ToString("MM/dd/yyyy") : "N/A")</td>
                <td>
                    <a href="/Admin/Edit/@song.SongId" class="btn btn-primary">Edit</a>
                    <a href="/Admin/Delete/@song.SongId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
